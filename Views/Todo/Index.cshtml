@model List<TodoModel>;

@{
    ViewData["Title"] = "Nareshtodos";
}


<h2>Todo List</h2>
<style>
    h2 {
        text-align: center;
        border-style: solid;
        border-radius: 5px;
        justify-content: center;
        text-align: center;
    }
</style>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Todo Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>

        @for(var i=0; i<Model.Count; i++)
        {
        <tr>
            <td>@Model[i].Name</td>
            <td>
                @if (@Model[i].complete.Equals(new DateTime(0001, 1, 01)))
                {
                    <a asp-controller="Todo" asp-action="Complete" asp-route-id="@Model[i].Id">
                        Complete Todo
                    </a>
                }
                else
                {
                    <p>Completed</p>
                }

            </td>
            </tr>
        }
    </tbody>
    @if (@Model.Count() == 0)
    {
        <caption class="text-center mt-5">Create a TODO</caption>
    }
</table>
